<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.neoscada</groupId>
		<artifactId>org.eclipse.neoscada.deploy-parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<artifactId>org.eclipse.neoscada.deploy.repack</artifactId>
	<packaging>pom</packaging>
	
	<properties>
		<eclipse.version>4.7.2</eclipse.version>
		<gemini.version>1.1.0</gemini.version>
		<emf.version>2.13.0</emf.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<id>equinox-sdk</id>
						<phase>package</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://archive.eclipse.org/equinox/drops/R-Oxygen.2-201711300510/equinox-SDK-Oxygen.2.zip</url>
							<unpack>true</unpack>
							<retries>3</retries>
							<readTimeOut>5000</readTimeOut>
							<outputDirectory>${project.build.directory}/equinox-sdk</outputDirectory>
							<sha512>02c6e8abbfa05072fbc139bc6c1d88245338631e7fa2776cbb2097ff1989fc6af595049a1bf7223dc0d39aa2bb1f31394cbadbcec45aa343d133f9f360675f99</sha512>
						</configuration>
					</execution>
					<execution>
						<id>gemini-dbaccess</id>
						<phase>package</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>http://ftp-stud.hs-esslingen.de/Mirrors/eclipse/gemini/dbaccess/r1.1/milestones/gemini-dbaccess-${gemini.version}.RELEASE-updates.zip</url>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/gemini-dbaccess</outputDirectory>
							<sha512>92e8db0dfc52a7a8ed1967638b0749624cef2d98b94389c788520fe1e08f63e18911960525f5f7ed65ff701f51a9ae6c1d4de43e66e5ca66670c36a604ed041b</sha512>
						</configuration>
					</execution>
					<execution>
						<id>org.eclipse.platform</id>
						<phase>package</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://archive.eclipse.org/eclipse/downloads/drops4/R-${eclipse.version}-201711300510/org.eclipse.platform-${eclipse.version}.zip</url>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/org.eclipse.platform</outputDirectory>
							<sha512>3ccc911c913990bb200d3f8e7d40da6c146611220ecb71cc2d7e564de718d8262ebaff68198eee388e0ea3e6c5e47a1101c09ef880ee5940271d7d8bd3977154</sha512>
						</configuration>
					</execution>
					<execution>
						<id>emf-xsd-Update</id>
						<phase>package</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>http://ftp-stud.hs-esslingen.de/Mirrors/eclipse/modeling/emf/emf/downloads/drops/${emf.version}/R201706090928/emf-xsd-Update-${emf.version}.zip</url>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/emf-xsd-Update</outputDirectory>
							<md5>87282b4dbfb793908262c7d4ee900517</md5>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- package as deb files -->
			<plugin>
				<artifactId>jdeb</artifactId>
				<groupId>org.vafer</groupId>

				<configuration>
					<skipPOMs>false</skipPOMs>
					<attach>false</attach>
					<snapshotExpand>true</snapshotExpand>
				</configuration>

				<executions>
					<execution>
						<id>equinox-sdk</id>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<controlDir>${project.basedir}/equinox-sdk/src/deb/control</controlDir>
							<name>equinox-sdk</name>
							<deb>${project.build.directory}/equinox-sdk_${eclipse.version}~${buildTimestamp}_all.deb</deb>
							<dataSet>
								<data>
									<src>${project.build.directory}/equinox-sdk</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/neoscada/p2/equinox-sdk</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>

					<execution>
						<id>gemini-dbaccess</id>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<controlDir>${project.basedir}/gemini-dbaccess/src/deb/control</controlDir>
							<name>gemini-dbaccess</name>
							<deb>${project.build.directory}/gemini-dbaccess_${gemini.version}~${buildTimestamp}_all.deb</deb>
							<dataSet>
								<data>
									<src>${project.build.directory}/gemini-dbaccess</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/neoscada/p2/gemini-dbaccess</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>

					<execution>
						<id>org.eclipse.platform</id>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<controlDir>${project.basedir}/org.eclipse.platform/src/deb/control</controlDir>
							<name>org.eclipse.platform</name>
							<deb>${project.build.directory}/org.eclipse.platform_${eclipse.version}~${buildTimestamp}_all.deb</deb>
							<dataSet>
								<data>
									<src>${project.build.directory}/org.eclipse.platform</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/neoscada/p2/org.eclipse.platform</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>

					<execution>
						<id>emf-xsd-Update</id>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<controlDir>${project.basedir}/emf-xsd-Update/src/deb/control</controlDir>
							<name>emf-xsd-Update</name>
							<deb>${project.build.directory}/emf-xsd-Update_${emf.version}~${buildTimestamp}_all.deb</deb>
							<dataSet>
								<data>
									<src>${project.build.directory}/emf-xsd-Update</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/neoscada/p2/emf-xsd-Update</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>

				<configuration>
					<forceRelease>true</forceRelease>
					<release>${buildTimestamp}</release>
					<attach>false</attach>
					<skipSigning>true</skipSigning>
					<group>Application/Misc</group>
					<rulesets>
						<ruleset>
							<id>default-rule</id>
							<rules>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0755</mode>
								</rule>
							</rules>
						</ruleset>
					</rulesets>
				</configuration>

				<executions>
					<execution>
						<id>equinox-sdk</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>equinox-sdk</packageName>
							<version>${eclipse.version}</version>
							<entries>
								<entry>
									<name>/usr/share/neoscada/p2/equinox-sdk</name>
									<collect>
										<from>${project.build.directory}/equinox-sdk</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
							</entries>
						</configuration>
					</execution>

					<execution>
						<id>gemini-dbaccess</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>gemini-dbaccess</packageName>
							<version>${gemini.version}</version>
							<entries>
								<entry>
									<name>/usr/share/neoscada/p2/gemini-dbaccess</name>
									<collect>
										<from>${project.build.directory}/gemini-dbaccess</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
							</entries>
						</configuration>
					</execution>
					
					<execution>
						<id>org.eclipse.platform</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>org.eclipse.platform</packageName>
							<version>${eclipse.version}</version>
							<entries>
								<entry>
									<name>/usr/share/neoscada/p2/org.eclipse.platform</name>
									<collect>
										<from>${project.build.directory}/org.eclipse.platform</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
							</entries>
						</configuration>
					</execution>
					
					<execution>
						<id>emf-xsd-Update</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>emf-xsd-Update</packageName>
							<version>${emf.version}</version>
							<entries>
								<entry>
									<name>/usr/share/neoscada/p2/emf-xsd-Update</name>
									<collect>
										<from>${project.build.directory}/emf-xsd-Update</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
							</entries>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>