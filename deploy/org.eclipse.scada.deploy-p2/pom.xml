<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.neoscada</groupId>
		<artifactId>org.eclipse.neoscada.deploy-parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	
	<artifactId>org.eclipse.neoscada.deploy.p2-incubation</artifactId>
	<packaging>eclipse-repository</packaging>

	<build>
		<plugins>
			<plugin>
				<artifactId>jdeb</artifactId>
				<groupId>org.vafer</groupId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<name>neoscada.deploy.p2</name>
							<deb>${project.build.directory}/neoscada.deploy.p2_${release.fullVersion}~${buildTimestamp}_all.deb</deb>
							<snapshotExpand>true</snapshotExpand>
							<dataSet>
								<data>
									<src>target/repository</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/neoscada/p2/org.eclipse.neoscada.deploy</prefix>
									</mapper>
								</data>
							</dataSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>neoscada.deploy.p2</packageName>
							<forceRelease>true</forceRelease>							
							<release>${buildTimestamp}</release>
							<version>${release.fullVersion}</version>
							<attach>true</attach>
							<skipSigning>true</skipSigning>
							<group>Application/Misc</group>

							<prerequisites>
								<prerequisite>neoscada.common</prerequisite>
								<prerequisite>neoscada.external.p2</prerequisite>
								<prerequisite>neoscada.utils.p2</prerequisite>
								<prerequisite>neoscada.base.p2</prerequisite>
								<prerequisite>neoscada.core.p2</prerequisite>
								<prerequisite>neoscada.protocols.p2</prerequisite>
							</prerequisites>

							<rulesets>
								<ruleset>
									<id>default-rule</id>
									<rules>
										<rule>
											<when>
												<type>directory</type>
											</when>
											<mode>0755</mode>
										</rule>
									</rules>
								</ruleset>
							</rulesets>
							<entries>
								<entry>
									<name>/usr/share/neoscada/p2/org.eclipse.neoscada.deploy</name>
									<collect>
										<from>target/repository</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
							</entries>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>