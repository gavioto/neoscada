<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.neoscada</groupId>
		<artifactId>org.eclipse.neoscada.deploy-parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<artifactId>org.eclipse.neoscada.deploy.p2director</artifactId>
	<version>0.5.0-SNAPSHOT</version>
	<packaging>eclipse-repository</packaging>

	<organization>
		<name>Eclipse NeoSCADA Project</name>
	</organization>

	<description>
		The Eclipse P2 director application packaged for the Eclipse NeoSCADA system.
	</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<configuration>
					<environments>
						<environment>
							<os>all</os>
							<ws>all</ws>
							<arch>all</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
					<execution>
						<id>archive-products</id>
						<goals>
							<goal>archive-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>jdeb</artifactId>
				<groupId>org.vafer</groupId>

				<configuration>
					<attach>false</attach>
				</configuration>

				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<name>neoscada.deploy.p2director</name>
							<deb>${project.build.directory}/neoscada.deploy.p2director_${release.fullVersion}~${buildTimestamp}_all.deb</deb>
							<snapshotExpand>true</snapshotExpand>
							<dataSet>
								<data>
									<src>target/products/org.eclipse.scada.deploy.p2director/all/all/all</src>
									<type>directory</type>
									<excludes>p2director</excludes>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/${project.artifactId}/product</prefix>
									</mapper>
								</data>
								<data>
									<src>src/p2director</src>
									<type>file</type>
									<includes>p2director</includes>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/${project.artifactId}/product</prefix>
										<filemode>0755</filemode>
									</mapper>
								</data>
								<data>
									<type>link</type>
									<linkName>/usr/bin/p2director</linkName>
									<linkTarget>/usr/share/${project.artifactId}/product/p2director</linkTarget>
									<symlink>true</symlink>
								</data>
							</dataSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
						<configuration>
							<packageName>neoscada.deploy.p2director</packageName>
							<forceRelease>true</forceRelease>							
							<release>${buildTimestamp}</release>
							<version>${release.fullVersion}</version>
							<attach>true</attach>
							<skipSigning>true</skipSigning>
							<group>Application/Misc</group>
							
							<prerequisites>
								<prerequisite>which</prerequisite>
							</prerequisites>
							
							<rulesets>
								<ruleset>
									<id>default-rule</id>
									<rules>
										<rule>
											<when>
												<type>directory</type>
											</when>
											<mode>0755</mode>
										</rule>
									</rules>
								</ruleset>
							</rulesets>
							<entries>
								<entry>
									<name>/usr/share/${project.artifactId}/product</name>
									<collect>
										<from>target/products/org.eclipse.scada.deploy.p2director/all/all/all</from>
										<directories>true</directories>
									</collect>
									<ruleset>default-rule</ruleset>
								</entry>
								<entry>
									<name>/usr/share/${project.artifactId}/product/p2director</name>
									<file>src/p2director</file>
									<mode>0755</mode>
								</entry>
								<entry>
									<name>/usr/bin/p2director</name>
									<linkTo>/usr/share/${project.artifactId}/product/p2director</linkTo>
								</entry>
							</entries>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>