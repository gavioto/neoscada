<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<name>/releng/org.eclipse.neoscada.releng.publish.step00</name>

	<parent>
		<groupId>org.eclipse.neoscada</groupId>
		<artifactId>org.eclipse.neoscada-parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../../../</relativePath>
	</parent>

	<artifactId>org.eclipse.neoscada.releng.publish.step00</artifactId>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>step-00-prepare-config</id>
						<phase>package</phase>
						<configuration>
							<target name="run">
								<propertyfile
									file="${project.basedir}/../generated/src/main/resources/publish.properties">
									<entry key="tmp.target.path" value="${tmp.target.path}" />
									<entry key="publish.target.path" value="${publish.target.path}" />
									<entry key="assemble.target.path" value="${assemble.target.path}" />
									<entry key="p2tom2.version" value="${p2tom2.version}" />
									<entry key="local.proxy.host" value="${local.proxy.host}" />
									<entry key="local.proxy.port" value="${local.proxy.port}" />
								</propertyfile>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>step-00-prepare-assemble</id>
						<phase>package</phase>
						<configuration>
							<target name="run">
								<ant antfile="gather-published-artifacts.ant" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>step-00-clean</id>
						<phase>clean</phase>
						<configuration>
							<target name="run">
								<delete includeemptydirs="true" failonerror="false">
									<fileset dir="${tmp.target.path}" includes="**/*" />
								</delete>
								<delete includeemptydirs="true" failonerror="false">
									<fileset dir="${assemble.target.path}" includes="**/*" />
								</delete>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
